{
  "info": {
    "name": "EduForge Notification Service - Simple",
    "description": "Collection đơn giản để minh họa cách các microservice khác có thể gửi thông báo cho người dùng",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Tạo thông báo mới",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/notifications",
          "host": ["{{baseUrl}}"],
          "path": ["notifications"]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"COURSE_ANNOUNCEMENT\",\n  \"title\": \"Thông báo mới về khóa học\",\n  \"content\": \"Khóa học sẽ có buổi học bổ sung vào ngày 15/07/2023\",\n  \"link\": \"/courses/course-123\",\n  \"metadata\": {\n    \"courseId\": \"course-123\",\n    \"courseName\": \"Lập trình Web\",\n    \"instructorName\": \"Nguyễn Văn A\"\n  },\n  \"recipients\": [\"user-123\", \"user-456\"]\n}"
        },
        "description": "Tạo một thông báo mới và gửi cho danh sách người dùng"
      }
    },
    {
      "name": "2. Gửi thông báo qua email",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/users/user-123/notifications/{{notificationId}}/email",
          "host": ["{{baseUrl}}"],
          "path": ["users", "user-123", "notifications", "{{notificationId}}", "email"]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student@example.com\"\n}"
        },
        "description": "Gửi một thông báo cụ thể qua email cho người dùng"
      }
    },
    {
      "name": "3. Gửi thông báo hàng loạt qua email",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/users/admin/notifications/bulk-email/{{notificationId}}",
          "host": ["{{baseUrl}}"],
          "path": ["users", "admin", "notifications", "bulk-email", "{{notificationId}}"]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipients\": [\n    {\n      \"userId\": \"user-123\",\n      \"email\": \"student1@example.com\"\n    },\n    {\n      \"userId\": \"user-456\",\n      \"email\": \"student2@example.com\"\n    }\n  ]\n}"
        },
        "description": "Gửi một thông báo cụ thể qua email cho nhiều người dùng cùng lúc"
      }
    }
  ]
}
